generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  cvu      Int     @unique
  wallet   Wallet?
}

model Wallet {
  id      Int   @id @default(autoincrement())
  userCvu Int   @unique
  balance Float @default(0)
  user    User  @relation(fields: [userCvu], references: [id])
}
